{
  "name": "nomatic-data",
  "description": "Extensible Object-relational Mapper for Node.js",
  "version": "0.0.0-dev",
  "main": "src/index.js",
  "typings": "src/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf src/**/*.js src/**/*.d.ts src/**/*.js.map src/*.js src/*.d.ts src/*.js.map",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "rm -rf coverage/ && cross-env NODE_ENV=test nyc mocha --reporter spec",
    "test:ci": "NODE_ENV=ci nyc mocha --reporter spec",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "docs": "rm -rf docs/ && typedoc --out ./docs/ --module commonjs --name nomatic-data --hideGenerator --mode file --excludeExternals --excludePrivate --includeDeclarations --gaID UA-96699243-1 ./src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bdfoster/nomatic-data.git"
  },
  "keywords": [
    "nomatic",
    "lib",
    "orm",
    "data",
    "mapper",
    "active",
    "record"
  ],
  "author": "Brian Foster <bdfoster89@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bdfoster/nomatic-data/issues"
  },
  "homepage": "https://github.com/bdfoster/nomatic-data#readme",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.46",
    "bcrypt": "^1.0.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.0",
    "mocha": "^4.0.1",
    "node-gyp": "^3.6.2",
    "nomatic-arangodb-adapter": "^1.0.11",
    "nyc": "^11.2.1",
    "semantic-release": "^8.2.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "ajv": "^5.4.0",
    "ajv-async": "^0.1.1",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "nomatic-events": "^3.0.0"
  }
}
